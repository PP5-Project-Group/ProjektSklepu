{% extends "BmwMainBundle:Layout:layout.html.twig" %}
{% block title %}Cart{% endblock %}
{% block content %}
<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<div class="panel panel-info">
				<div class="panel-heading">
					<div class="panel-title">
						<div class="row">
							<div class="col-xs-6">
								<h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
							</div>
							<div class="col-xs-6">
								<button type="button" class="btn btn-primary btn-sm btn-block">
									<span class="glyphicon glyphicon-share-alt"></span> Continue shopping
								</button>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-body">
				 {% if empty %}
    			<h5>Your shopping cart is empty.</h5>
				{% endif %}
				{% set cart = app.session.get('cart') %}
				
				{% for movies in movie %}
					<div class="row">
						<div class="col-xs-2"><img class="img-responsive" src="{{movies.imgUrl}}">
						</div>
						<div class="col-xs-4">
							<h4 class="product-name"><strong>{{movies.title}}</strong></h4><h4><small>{{movies.description}}</small></h4>
						</div>
						<div class="col-xs-6">
							<div class="col-xs-6 text-right">
								<h6><strong>{{movies.price}}<span class="text-muted"></span>$</strong></h6>
							</div>
							<div class="col-xs-4">
						
							</div>
							<div class="col-xs-2">
								<button type="button" class="btn btn-link btn-xs">
									<a href="{{path('remove_product_from_cart')}}"> <span class="glyphicon glyphicon-trash"> </span></a> 
								</button>
							</div>
						</div>
					</div>
					<hr>
		     {% endfor %}
		     
					<div class="row">
						<div class="text-center">
							<div class="col-xs-9">
								<h6 class="text-right"><a href="">Added items?</a></h6>
							</div>
							<div class="col-xs-3">
								<button type="button" class="btn btn-default btn-sm btn-block">
									Update cart
								</button>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-footer">
					<div class="row text-center">
						<div class="col-xs-9">
							<h4 class="text-right">Total <strong>$50.00</strong></h4>
						</div>
						<div class="col-xs-3">
							<button type="button" class="btn btn-success btn-block">
								Checkout
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
 {% endblock %}