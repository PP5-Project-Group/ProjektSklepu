{% extends "BmwMainBundle:Layout:layout.html.twig" %}
{% block title %}{{movie.title}}{% endblock %}
{% block content %}
    <!-- Page Content -->
    <div class="container">

        <div class="row">
            <div class="col-md-8">
                      
				<ol class="breadcrumb">
  					<center>{{movie.title}}</center>
				</ol>
                 {% if app.session.flashBag.has('success') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('success') %}
                    {{msg}}
                {% endfor %}
            </div>
        {% endif %}
                <div class="row">   
                               
                    <div class="col-sm-4 col-lg-12 col-md-8">
                        <div class="thumbnail">
                            <img src="{{movie.imgUrl}}" width="203" height="301" alt="">
                            <div class="caption">
                                <h4 class="pull-right">{{ movie.price}}$</h4>
                                <h4><a href="#">{{ movie.title }}</a>
                                </h4>
                                <p>{{movie.description}}</p>
                                <p>Aktorzy: {{movie.actors}}</p>
                                {% set login = app.session.get('login') %}
                                 {% if login %}
                                  <span class="but_rec"><a href="{{ app.request.uriForPath('/movie') }}/{{movie.movieId}}/review"><button type="button" class="btn btn-info">Dodaj recenzje</button></a></span>
                                 {% endif %}                            
                                <a class="btn btn-success" href="{{ path('add_product_to_cart') }}">Dodaj do koszyka</a>
                                
                            </div>
                            <div class="ratings">
                                                        
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <!-- /.container -->
{% endblock %}
